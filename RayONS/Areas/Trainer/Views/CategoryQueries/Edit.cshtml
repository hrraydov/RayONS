@model RayONS.DAL.CategoryQuery
@{
    ViewBag.Title = "Edit";
}

<h2>Редактирай</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Заявка за категория</legend>
        <input type="hidden" name="QueryId" value="@Model.QueryId" />
        <input type="hidden" name="UserId" value="@RayONS.DAL.UsersDAL.getUserId(User.Identity.Name)" />

        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryName,"Име на категорията")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CategoryName)
            @Html.ValidationMessageFor(model => model.CategoryName)
        </div>

        <p>
            <input type="submit" value="Запази" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Обратно към списъка", "Index")
</div>
