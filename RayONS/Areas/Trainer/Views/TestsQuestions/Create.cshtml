@model RayONS.DAL.Question
@{
    ViewBag.Title = "Create";
}

<h2>Създай</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Въпрос</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TrueAnswer, "Верен отговор")
        </div>
        <div class="editor-field">
            <input id="TrueAnswer1" type="radio" checked name="TrueAnswer" value="1" /><label for="TrueAnswer1">1</label>
            <input id="TrueAnswer2" type="radio" name="TrueAnswer" value="2" /><label for="TrueAnswer2">2</label>
            <input id="TrueAnswer3" type="radio" name="TrueAnswer" value="3" /><label for="TrueAnswer3">3</label>
            <input id="TrueAnswer4" type="radio" name="TrueAnswer" value="4" /><label for="TrueAnswer4">4</label>
            @Html.ValidationMessageFor(model => model.TrueAnswer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionName, "Име на въпроса")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionName)
            @Html.ValidationMessageFor(model => model.QuestionName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Answer1, "Отговор 1")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Answer1)
            @Html.ValidationMessageFor(model => model.Answer1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Answer2, "Отговор 2")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Answer2)
            @Html.ValidationMessageFor(model => model.Answer2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Answer3, "Отговор 3")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Answer3)
            @Html.ValidationMessageFor(model => model.Answer3)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Answer4, "Отговор 4")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Answer4)
            @Html.ValidationMessageFor(model => model.Answer4)
        </div>

        <p>
            <input type="submit" value="Създай" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Към списъка", "Index")
</div>
